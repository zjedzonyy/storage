generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(BASIC)
  files     File[]
  folders   Folder[]
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(uuid())
  title     String
  size      Int // rozmiar pliku w bajtach
  mimeType  String // typ MIME pliku
  createdAt DateTime @default(now())
  src       String? // opcjonalny link do pliku w chmurze
  localPath String? // ścieżka lokalna, jeśli przechowujesz pliki lokalnie
  userId    String
  author    User     @relation(fields: [userId], references: [id])
  folderId  String? // opcjonalne przypisanie do folderu
  folder    Folder?  @relation(fields: [folderId], references: [id])
}

model Folder {
  id         String   @id @default(uuid())
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  files      File[]
  parentId   String?
  parent     Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id])
  subfolders Folder[] @relation("FolderHierarchy")
}

enum Role {
  BASIC
  EDITOR
  ADMIN
}
